<p>Our family loves to eat. Add a {{link-to "New Recipe" "new_recipe" class='btn btn-primary header-btn'}} for us to try.</p>

{{#each}}
  <article>
    <div class='wrapper'>
      <h2 class="entry-title">{{recipeName}}</h2>
      <h2 class="contributor">{{contributor}}</h2>
    <section>
      <img {{bind-attr src=imageURL}} class='centered' />
      <h4 class="add-form"{{action 'toggleIngredients' on 'click'}}>
         Ingredients <i {{bind-attr class=':glyphicon showIngredients:glyphicon-chevron-down:glyphicon-chevron-up'}}></i>
      </h4>
      {{#if showIngredients}}
      <ul>
        {{#each ingredient in splitIngredients}}
        <li>{{ingredient}}</li>
        {{/each}}
      </ul>
      {{/if}}
      <h4 class="add-form" {{action 'toggleDirections' on 'click'}}>
         Directions <i {{bind-attr class=':glyphicon showDirections:glyphicon-chevron-down:glyphicon-chevron-up'}}></i>
      </h4>
      {{#if showDirections}}
      <ul>
        {{#each direction in splitDirections}}
        <li>{{direction}}</li>
        {{/each}}
      </ul>
      {{/if}}
      <h3>{{link-to 'Edit' 'edit_recipe' this class='edit-link' classNames='btn btn-default'}}</h3>
    </div>
    </section>
  </article>
{{/each}}
