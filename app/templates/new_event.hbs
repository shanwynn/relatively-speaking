<p>Let's all get together! Share a family event.</p>

<div>
  <article>
  <form role="form">
     <div class="form-group">
       <label for='eventTitle'>Event:</label>
       {{input type='text' value=eventTitle id='eventTitle' class='form-control'}}
     </div>
     <div class="form-group">
       <label for='eventDate'>Date:</label>
       {{input type='date' value=eventDate id='eventDate' class='form-control'}}
     </div>
     <div class="form-group">
       <label for='eventTime'>Time:</label>
       {{input type='time' value=eventTime id='eventTime' class='form-control'}}
     </div>
     <div class="form-group">
       <label for='eventPost'>Event Details:</label>
       {{input type='text' value=eventPost id='eventPost' class='form-control'}}
     </div>

     <button class='btn btn-primary' {{action 'save'}}>Post Event</button>
  </form>
  </article>
</div>
